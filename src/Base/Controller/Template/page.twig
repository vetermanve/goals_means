<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" type="text/css" href="/css/main.css" media="all"/>
    <link rel="stylesheet" type="text/css" href="/semantic/semantic.min.css" media="all"/>
    {#<link rel="stylesheet" type="text/css" href="/semantic/components/icon.min.css" media="all"/>#}
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
    <script src="/semantic/semantic.min.js"></script>
    <script>
      $(document)
        .ready(function() {
          $('.ui.dropdown').dropdown();
        })
      ;
    </script>
</head>
<body>
    <div id="content" class="ui container">
        <div id="content-pad">
            <div class="ui secondary pointing stackable menu">
                {% for pageName, url in _pages %}
                    {% if (url in _currentPage) %}
                        <a href="{{ url }}" class="item active">{{ pageName }}</a>
                    {% else %}
                        <a href="{{ url }}" class="item">{{ pageName }}</a>
                    {% endif %}
                {% endfor %}
                
                <div class="right menu">
                    <span class="item" style="float: right;">{{ _user.name }} {{ _budget ? '(' ~ _budget.name ~ ')' : '' }}</span>
                    {% if _userId %}
                    <a class="ui item" href="/auth/logout">
                        Выйти
                    </a>
                    {% else %}
                    <a class="ui item" href="/auth/">
                        Войти
                    </a>
                    {% endif %}
                </div>
            </div>
        {% block content %}
        {% endblock %}
        </div>
    </div>
</body>
</html>