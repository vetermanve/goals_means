{% extends _layout %}

{% block content %}

    <h1>Планы </h1>
    {% if(message) %}
        <div class="ui success message">
            {{ message }}
        </div>
        <p></p>
    {% endif %}
    <div class="ui cards">
        {% for suggestion in suggestions %}
        <div class="card">
            <div class="content">
                <div class="header">{{ suggestion.name }}</div>
                <div class="meta">{{ suggestion.date | date('d M') }}</div>
                <div class="description">
                    {{ suggestion.amount }}
                </div>
            </div>
            <div class="extra content">
                <a href="/suggestions/delete?id={{ suggestion.id }}" class="ui small button">удалить</a>
            </div>
        </div>
    {% endfor %}
    </div>
    <h2>Внеси план</h2>
    <div class="ui form">
        <form action="/suggestions/add" method="post">
            <div class="field">
                <label>На что?</label>
                <input type="text" name="name" placeholder="На что?"/>
            </div>
            <div class="field">
                <label>Когда?</label>
                <input type="text" name="date" placeholder="Когда?" value="{{ date | date('d.m.Y') }}"/>
            </div>
            <div class="field">
                <label>Сколько</label>
                <input type="number" name="amount" placeholder="Сколько денег"/>
            </div>
            <button class="ui button" type="submit">Добавить план</button>
        </form>
    </div>
{% endblock %}