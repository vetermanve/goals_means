{% extends _layout %}

{% block content %}
    {% include '_styles.twig' %}
    {% if (success == false) %}
        <div class="ui middle aligned center aligned grid" id="login-form">
            <div class="column">
                <h2 class="ui teal image header">
                    <i class="redo icon"></i>
                    <div class="content">
                        Восстановление пароля
                    </div>
                </h2>
                <form class="ui large form {{ message ? 'error' : '' }}" action="/auth/reset" method="post">
                    <input type="hidden" name="submit" value="1"/>
                    <div class="ui stacked segment">
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="mail icon"></i>
                                <input type="text" name="email" value="{{ email }}" placeholder="Введите свой email">
                            </div>
                        </div>
                        <input class="ui fluid large teal submit button" type="submit" value="Восстановить"/>
                    </div>

                    <div class="ui error message">{{ message }}</div>
                </form>
            </div>
        </div>
    {% else %}
        На ваш почтовый ящик успешно отправлено письмо с инструкциями!<br>
        Если письмо не пришло <a href="/auth/reset?for_email={{ email }}">попробуйте еще раз</a>.
    {% endif %}
{% endblock %}