{% extends _layout %}

{% block content %}
    {% include '_styles.twig' %}
    {% if(authorised == false) %}
        <div class="ui middle aligned center aligned grid" id="login-form">
            <div class="column">
                <h2 class="ui teal image header">
                    <i class="lightbulb icon"></i>
                    <div class="content">
                        Регистрация
                    </div>
                </h2>
                <form class="ui large form {{  (message) ? 'error' : '' }}" action="/auth-signup/" method="post">
                    <input type="hidden" name="submit" value="1"/>
                    <div class="ui stacked segment">
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="mail icon"></i>
                                <input type="text" name="email" value="{{ email }}" data-type="login" placeholder="E-mail address">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input type="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="user icon"></i>
                                <input type="text" name="firstname" value="{{ name }}" placeholder="User name" autocomplete="on" >
                            </div>
                        </div>
                        <input class="ui fluid large teal submit button" type="submit" value="Зарегистрироваться"/>
                    </div>
                    <div class="ui error message">{{ message }}</div>
                </form>

                <div class="ui message">
                    Уже зарегистрирован? <a href="/auth">Войди в аккаунт</a>
                </div>
            </div>
        </div>
    {% else %}
        Ты успешно авторизован!
    {% endif %}
{% endblock %}